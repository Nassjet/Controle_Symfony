{% extends 'base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
    <h1>Messages</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ message.Titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ message.Contenu }}</td>
            </tr>
            <tr>
                <th>DateHeure</th>
                <td>{{ message.DateHeure ? message.DateHeure|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_messages_index') }}">back to list</a>

    <a href="{{ path('app_messages_edit', {'id': message.id}) }}">edit</a>

    {{ include('messages/_delete_form.html.twig') }}
{% endblock %}
